/* pages/index/index.wxss */

/* 轮播图区 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航区 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem text {
  font-size: 26rpx;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

/* 推荐歌曲区 */
.recommendContainer {
  padding: 20rpx;
}
.recommendContainer .recommendContent {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* display: block; */
  /* white-space: nowrap; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.toplist {
  padding: 20rpx;
}
.toplistSwiper {
  height: 420rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiperItem .musicItem {
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image,
.count,
.musicName {
  width: 100rpx;
  height: 100rpx;
}
.musicItem .count,
.musicName {
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  width: 400rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
