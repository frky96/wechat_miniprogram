/* 头部 */
.header {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.header image {
  width: 100%;
  height: 300rpx;
}
.header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-40%) translateY(-20%);
  font-size: 40rpx;
  color: #fff;
}
/* 列表区 */
/* 头部 */
.listContainer {
  position: relative;
  top: -20rpx;
  padding: 20rpx 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.listContainer .chooseMore {
  float: right;
}
/* 列表区 */
/* 内容 */
.scrollMusic {
  height: calc(100vh - 384rpx);
}
.scrollItem {
  display: flex;
  position: relative;
  margin: 20rpx 0;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem .musicInfo .author {
  display: flex;
}
.scrollItem .musicInfo .author .authorItem {
  margin-right: 18rpx;
}
.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
